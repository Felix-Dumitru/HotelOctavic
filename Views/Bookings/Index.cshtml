@model List<Hotel.Models.Booking>
@{
    ViewData["Title"] = "Index";
}

<h3>Bookings</h3>

<a asp-action="Create" class="btn btn-success mb-3">Create new Booking</a>

<table class="table">
    <thead>
    <tr>
        <th>UserId</th>
        <th>RoomId</th>
        <th>StartDate</th>
        <th>EndDate</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var booking in Model)
    {
        <tr>
            <td>@booking.UserId.ToString()</td>
            <td>@booking.RoomId.ToString()</td>
            <td>@booking.StartDate.ToString()</td>
            <td>@booking.EndDate.ToString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@booking.Id"
                   class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@booking.Id"
                       class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>