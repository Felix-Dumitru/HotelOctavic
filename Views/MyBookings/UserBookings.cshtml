@using Hotel.Models.ViewModels
@model List<Hotel.Models.ViewModels.BookingVm>
@{
    ViewData["Title"] = "Bookings for a user";
}

<h3>Bookings for a user</h3>

<a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Back to users</a>

<table class="table">
    <thead>
    <tr>
        <th>User name</th>
        <th>Room number</th>
        <th>Number of people</th>
        <th>Start date</th>
        <th>End date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var booking in Model)
    {
        <tr>
            <td>@booking.UserName</td>
            <td>@booking.RoomNumber</td>
            <td>@booking.NoOfPeople</td>
            <td>@booking.StartDate.ToString()</td>
            <td>@booking.EndDate.ToString()</td>
        </tr>
    }
    </tbody>
</table>