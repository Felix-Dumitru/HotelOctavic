@model Hotel.Models.ViewModels.GuestBookingVm
@{
    ViewData["Title"] = "Book a room";
}

@* <a asp-controller="Auth" asp-action="Logout"
   class="btn btn-info mb-3">Log out</a> *@

<h3>Book a room</h3>

<form asp-action="Book" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NoOfPeople">Number of people</label>
        <input asp-for="NoOfPeople" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label asp-for="RoomNumber">Room number</label>
        <input asp-for="RoomNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start date</label>
        <input asp-for="StartDate" type="date" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End date</label>
        <input asp-for="EndDate" type="date" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Book</button>
    <a asp-action="MyBookings" class="btn btn-success">My bookings</a>
</form>